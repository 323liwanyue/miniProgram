/**app.wxss**/
page {
  background: #f2f2f2;
}

/* 头部 */ 
.wechat-header {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 4;
}

.status-bar {
  background: #f2f2f2;
}

 .title-wrap { 
   /* height: 68rpx; 
   padding: 50rpx 20rpx 26rpx;  */
   height: 100%;
   padding: 0 20rpx;
   display: flex; 
   align-items: center; 
   justify-content: center;
   background: #fff; 
 } 

 .title-txt { 
   display: inline-block;
   width: calc(100% - 70rpx); 
   height: 68rpx;
   padding-right: 50rpx;
   line-height: 68rpx;
   text-align: center; 
   overflow: hidden; 
   white-space: nowrap; 
   text-overflow: ellipsis;
   font-size: 36rpx; 
   letter-spacing: 4rpx; 
   vertical-align: middle;
 } 

/* 图标 */
.locate {
  width: 31rpx;
  height: 40rpx;
}

.user {
  width: 37rpx;
  height: 40rpx;
}

.arrow-left {
  width: 20rpx;
  height: 40rpx;
  padding: 10rpx 30rpx 5rpx 0;
}

.arrow-right {
  width: 20rpx;
  height: 20rpx;
}

.display-none {
  display: none;
}

/* btn */
.btn-common-wrap {
  padding: 0 20rpx;
}

.common-btn {
  width: 100%;
  height: 90rpx;
  background: #2eabe6;
  border-radius: 10rpx;
  text-align: center;
  line-height: 90rpx;
  color: #fff;
  font-size: 32rpx;
  letter-spacing: 2rpx;
}

.ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.margin-top-10 {
  margin-top: 10rpx;
}

.margin-bottom-60 {
  margin-bottom: 60rpx;
}

/* 操作图标 */
.locate-s-icon {
  width: 23rpx;
  height: 30rpx;
  padding:10rpx 30rpx 5rpx 0;
}

.user-s-icon {
  width: 28rpx;
  height: 30rpx;
}

/* 用户操作图标 */
.user-operator-wrap {
  position: fixed;
  /* top: 160rpx; */
  right: 20rpx;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: rgba(0,0,0,.5);
  display: flex;
  justify-content: center;
  align-items: center;
}