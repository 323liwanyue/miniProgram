/* pages/history-record/history-record.wxss */
page {
  background: #f2f2f2;
  height: 100%;
  box-sizing: border-box;
}

/* 内容 */
.history-time {
  display: inline-block;
  height: 40rpx;
  line-height: 40rpx;
  color: #999;
  font-size: 24rpx;
  text-indent: 20rpx;
}

.daily-history-list {
  position: relative;
  display: flex;
  flex-direction: column;
  height: 140rpx;
  padding: 10rpx 20rpx;
  margin-bottom: 10rpx;
  color: #333;
  font-size: 28rpx;
  background: #fff;
  line-height: 46rpx;
}

.charge-fail {
  position: relative;
  display: flex;
  height: 160rpx;
  margin-bottom: 10rpx;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  background: #fff;
}

.daily-history-list:last-child,
.charge-fail:last-child {
  margin-bottom: 0;
}

.daily-history-clock {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  color: #999;
  font-size: 24rpx;
  line-height: 40rpx;
  display: flex;
  flex-direction: column;
  text-align: right;
}

.is-not-full {
  color: #eb6100;
}

.is-full {
  color: #2eabe6;
}

.nodata {
  display: flex;
  align-items: center;
  justify-content: center;
}

.load-icon {
  width: 60rpx;
  height: 60rpx;
}