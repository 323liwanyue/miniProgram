/* pages/question-detail/question-detail.wxss */
page {
  background: #f2f2f2;
  height:100%;
}

/* 问题详情 */
.question-detail-wrap {
  width: calc(100% - 40rpx);
  min-height: calc(100% - 140rpx - 10rpx);
  padding: 0 20rpx;
  background: #fff;
  word-break: break-all;
  word-wrap: break-word;
  color: #333;
}

.question-detail-title {
  display: inline-block;
  padding-top: 30rpx;
  font-size: 34rpx;
}

.question-detail-cnt {
  font-size: 24rpx;
}

.textLeft {
  text-align: left;
}